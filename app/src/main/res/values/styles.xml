<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="BlockGameField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:minWidth">45dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">@color/background_game_field</item>

    </style>

    <style name="NextFigureBlockGameField">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:layout_margin">1dp</item>

    </style>

    <style name="TitleBlockTableOfRecords">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:text">" "</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">23sp</item>
        <item name="android:background">@color/background_game_field</item>

    </style>

    <style name="BlockTableOfRecords">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:text">" "</item>
        <item name="android:textColor">@color/text_table_of_records</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/background_game_field</item>

    </style>

</resources>
